<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        style="@style/CardView.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            >
<android.support.constraint.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTopNr"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:background="#D80606"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical|center_horizontal"
                android:justificationMode="inter_word"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:fontFamily="sans-serif-medium" />
</android.support.constraint.ConstraintLayout>
            <ImageView
                android:id="@+id/ivTopFilmePoster"
                android:layout_width="65dp"
                android:layout_height="90dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                android:layout_gravity="top">
            </ImageView>
            <TextView
                android:id="@+id/tvTopFilmeTitlu"

                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="185dp"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#252424"
                android:textSize="18dp"
                android:textStyle="bold" />
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvTopImdb"
                    android:text="Nota IMDb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textAllCaps="false"
                    android:textColor="#252424"
                    android:textSize="14dp"
                    android:gravity="center_vertical|center_horizontal"
                     >

                </TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTopImdb"
                    android:src="@drawable/ic_star_orange_24dp"
                    android:gravity="center_vertical|center_horizontal"
                    tools:ignore="MissingConstraints">
                </ImageView>
                <TextView
                    android:id="@+id/tvTopFilmeNota"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@+id/tvTopImdb"
                    app:layout_constraintEnd_toEndOf="@+id/tvTopImdb"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:textColor="#252424"
                    android:textSize="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold|italic" >

                </TextView>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>